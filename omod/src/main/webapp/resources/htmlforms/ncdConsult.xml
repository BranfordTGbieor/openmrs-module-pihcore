<htmlform id="ncd-consult-note" class="simple-form-ui" formUuid="8bb13d24-e341-42e6-84ef-8fb73d1fce82"
          htmlformUuid="59166690-b88b-4cbd-92f7-31fb037bf2dc"
          formName="NCD Consult Note"
          formEncounterType="ae06d311-1866-455b-8a64-126a9bd74171" formVersion="1.0">

    <translations defaultLocale="fr">
        <code name="ncd_consult">
            <variant locale="en" value="NCD Consult"/>
            <variant locale="fr" value="Consultation d'NCD"/>
        </code>
    </translations>

    <style type="text/css">

        #who-when-where {
        margin-bottom: 6px;
        border-bottom: 1px solid #ccc;
        }

        #who-when-where p {
        display: inline-block;
        padding-right: 20px;
        }

        #where > input[type=text] {
        display: inline-block;
        }

        .narrow {
        width: 200px;
        }

        .field-error {
        color: #ff6666;
        font-size: 1.1em;
        display: block;
        }

        .column {
        float: left;
        width: 50%
        }

        .simple-form-ui input {
        min-width: 80%
        }

        form fieldset {
        min-width: 90%
        }

        #encounterDate input {
        min-width: 15%
        }

        textarea {
        overflow-y: hidden; /* fixes scrollbar flash - kudos to @brettjonesdev */
        padding-top: 1.1em; /* fixes text jump on Enter keypress */
        }

        @media print {
        .print-form-datestamps { display: block !important }
        button.cancel, button.submit { display: none }
        label { font-weight: bold }
        label[for] { font-weight: normal } /* refers to the radio set label */
        }

        .half-size-text {
        color: #ff6666;
        font-size: 50%;
        display: block;
        }

        #treatment_outcomes input[type="checkbox"] {
        margin: 12px 0 0 0 ;
        }

    </style>

    <script type="text/javascript">

        jq(function() {

        // make text areas expand based on content (this allows us to avoid scrollbars and thereby facilitate printing)
        jq('#post-op-surgical-note').on( 'keyup', 'textarea', function (){
        jq(this).height( 0 );
        jq(this).height( this.scrollHeight );
        });

        jq('#post-op-surgical-note').find( 'textarea' ).keyup();

        });

    </script>

    <div class="print-form-datestamps" style="display:none">
        <p><uimessage code="created_on"/>:
            <lookup complexExpression="$form.dateCreated"/>
        </p>
        <p><uimessage code="last_updated_on"/>:
            <lookup complexExpression="$form.dateChanged"/>
        </p>
        <p><uimessage code="printed_on"/>:
            <lookup complexExpression="$formGeneratedDatetime"/>
        </p>
    </div>

    <ifMode mode="VIEW" include="false">
        <h2>
            <label>
                <uimessage code="oncology_consult"/>
            </label>
        </h2>

        <!-- users with retroConsultNote privilege can edit provider, location, and date for both retro and active visits -->
        <includeIf velocityTest="$user.hasPrivilege('Task: emr.retroConsultNote')">
            <div id="who-when-where">
                <p id="who">
                    <label>
                        <uimessage code="emr.patientDashBoard.providerRequired"/>
                    </label>
                    <span>
                        <encounterProviderAndRole default="currentUser"
                                                  encounterRole="4f10ad1a-ec49-48df-98c7-1391c6ac7f05" required="true"/>
                    </span>
                </p>
                <p id="where">
                    <label>
                        <uimessage code="emr.locationRequired"/>
                    </label>
                    <span>
                        <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"
                                           tags="Consult Note Location"/>
                    </span>
                </p>
                <p id="when">
                    <label>
                        <uimessage code="emr.patientDashBoard.date"/>
                    </label>
                    <span>
                        <encounterDate id="encounterDate" default="now"/>
                    </span>
                </p>
            </div>
        </includeIf>
        <!-- users with retroConsultNoteThisProviderOnly can edit location and date (but not provider) for retro visits -->
        <includeIf
                velocityTest="$user.hasPrivilege('Task: emr.retroConsultNoteThisProviderOnly') and !($user.hasPrivilege('Task: emr.retroConsultNote')) and (!$visit.open)">
            <div style="display:none">
                <encounterProviderAndRole default="currentUser" encounterRole="4f10ad1a-ec49-48df-98c7-1391c6ac7f05"
                                          required="true"/>
            </div>

            <div id="who-when-where">
                <p id="who">
                    <label>
                        <uimessage code="emr.patientDashBoard.provider"/>
                    </label>
                    <span>
                        <lookup expression="user.person.personName"/>
                    </span>
                </p>
                <p id="where">
                    <label>
                        <uimessage code="emr.locationRequired"/>
                    </label>
                    <span>
                        <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"
                                           tags="Consult Note Location"/>
                    </span>
                </p>
                <p id="when">
                    <label>
                        <uimessage code="emr.patientDashBoard.date"/>
                    </label>
                    <span>
                        <encounterDate id="encounterDate" default="now"/>
                    </span>
                </p>
            </div>

        </includeIf>
        <!-- all users that don't have retroConsultNote privilege cannot edit provider, location or date when active visit -->
        <includeIf velocityTest="(!$user.hasPrivilege('Task: emr.retroConsultNote')) and ($visit.open)">
            <div style="display:none">
                <encounterProviderAndRole default="currentUser" encounterRole="4f10ad1a-ec49-48df-98c7-1391c6ac7f05"
                                          required="true"/>
                <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"/>
                <encounterDate id="encounterDate" default="now"/>
            </div>
            <div id="who-when-where">
                <table id="who-where-when-view">
                    <tr>
                        <td>
                            <label>
                                <uimessage code="emr.patientDashBoard.provider"/>
                            </label>
                            <span>
                                <lookup complexExpression="#if($encounter) $ui.format($encounter.provider) #else $ui.format($user.person) #end"/>
                            </span>
                        </td>
                        <td>
                            <label>
                                <uimessage code="emr.location"/>
                            </label>
                            <span>
                                <lookup complexExpression="#if($encounter) $ui.format($encounter.location) #else $ui.format($sessionContext.sessionLocation) #end"/>
                            </span>
                        </td>
                        <td>
                            <label>
                                <uimessage code="emr.patientDashBoard.date"/>
                            </label>
                            <span>
                                <lookup complexExpression="#if($encounter) $ui.format($fn.startOfDay($encounter.encounterDatetime)) #else $ui.format($fn.startOfDay($formGeneratedDatetime)) #end"/>
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </includeIf>
    </ifMode>

    <section id="ncd_info" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.info">
        <p>
            <label>
                <uimessage code="info"/>
            </label>
        </p>
    </section>

    <section id="ncd_vitals" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.vitals">
        <p>
            <label>
                <uimessage code="waist_circum"/>
            </label>

            <label>
                <uimessage code="hip_circum"/>
            </label>

            <label>
                <uimessage code="waist_hip_ratio" />
                <!-- ToDo: Calculate? Ask Gene -->
            </label>
        </p>
    </section>

    <section id="heart_failure" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.heart_failure">
        <p>
            <label>
                <uimessage code="pihcore.ncd.hf.nyha"/>
            </label>
        </p>
        <p>
            <label>
                <uimessage code="vol_status"/>
            </label>
        </p>
    </section>

    <section id="diabetes" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.diabetes">
        <p>
            <label>
                <uimessage code="fasting_glucose"/>
            </label>
        </p>
        <p>
            <label>
                <uimessage code="hypoglycemia_symptoms"/>
            </label>
        </p>
    </section>

    <section id="respire" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.resp">
        <p>
            <label>
                <uimessage code="current_meds"/>
            </label>
        </p>
    </section>

    <section id="epilepsy" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.epil">
        <p>
            <label>
                <uimessage code="current_meds"/>
            </label>
        </p>
    </section>

    <section id="ncd_plan" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.plan">
        <p>
            <label>
                <uimessage code="pihcore.ncd.plan"/>
            </label>
        </p>
    </section>

    <section id="meds" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.meds">
        <p>
            <label>
                <uimessage code="current_meds"/>
            </label>
        </p>
    </section>

    <ifMode mode="VIEW" include="false">
        <div id="buttons">
            <submit submitClass="confirm right" submitCode="mirebalais.save"/>
            <button type="button" class="cancel">
                <uimessage code="emr.cancel"/>
            </button>
        </div>
    </ifMode>

</htmlform>