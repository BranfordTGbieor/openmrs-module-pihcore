                <pastMedicalHistoryCheckbox concept="PIH:DIABETES"/>
                <pastMedicalHistoryCheckbox concept="PIH:Premature birth of patient"/>
                <pastMedicalHistoryCheckbox concept="PIH:OTHER" label="Autre" specify="true"/>
                <pastMedicalHistoryCheckbox concept="PIH:OTHER" label="Autre" specify="true"/>
