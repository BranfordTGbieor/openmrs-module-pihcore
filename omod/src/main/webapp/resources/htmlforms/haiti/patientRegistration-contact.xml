<htmlform formUuid="9EE91561-42A0-4E1C-9469-ABA6726056BE" formName="Patient Registration Contact Person" formEncounterType="873f968a-73a8-4f9c-ac78-9f4778b751b6" formVersion="1.0">

    <uiInclude provider="registrationapp" javascript="field/personAddressWithHierarchy.js" />

    <script type="text/javascript">

        jq(function() {

            // remove the first title span that is automatically generated by the HFE
            if ( jq("#contactPerson span.title").length ) {
                jq("#contactPerson span.title").remove();
            }

            var personAddressWithHierarchy = {
                id: 'contactAddress',
                container: jq('#contactAddress-container'),
                initialValue: null,
                shortcutFor: null,
                manualFields: ['address2']
            }

            PersonAddressWithHierarchy(personAddressWithHierarchy);

        });
    </script>

    <ifMode mode="VIEW" include="false">
        <h2><uimessage code="zl.registration.patient.contactPerson.header"/></h2>
    </ifMode>

    <div class="hidden">
        <encounterProviderAndRole default="currentUser" encounterRole="cbfe0b9d-9923-404c-941b-f048adc8cdc0" required="true"/>
        <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"/>
    </div>

    <input id="displayEncounterDate" value="false" type="hidden" />

    <section id="contactPerson" sectionTag="section">

        <fieldset>

            <obsgroup groupingConceptId="PIH:PATIENT CONTACTS CONSTRUCT">

                <div>
                    <div>
                        <h3><uimessage code="zl.registration.patient.contactPerson.contactName.question"/></h3>
                        <p class="left">
                            <obs conceptId="PIH:NAMES AND FIRSTNAMES OF CONTACT" id="contactFirstName" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                        </p>
                    </div>

                    <div>
                        <h3><uimessage code="zl.registration.patient.contactPerson.relationships.label"/></h3>
                        <p class="left">
                            <obs conceptId="PIH:RELATIONSHIPS OF CONTACT" id="contactRelationship" showUnits="false" unitsCssClass="append-to-value" size="20" required="true"/>
                        </p>
                    </div>

                    <!-- edit mode of address -->
                    <ifMode mode="VIEW" include="false">
                        <div id="contactAddress-container">
                            <h3><uimessage code="zl.registration.patient.contactPerson.contactAddress.label"/></h3>
                            <div>
                                <h3><uimessage code="mirebalais.address.country"/></h3>
                                <p class="left">
                                    <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-country" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                                </p>
                            </div>
                            <div>
                                <h3><uimessage code="mirebalais.address.stateProvince"/></h3>
                                <p class="left">
                                    <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-stateProvince" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                                </p>
                            </div>
                            <div>
                                <h3><uimessage code="mirebalais.address.cityVillage"/></h3>
                                <p class="left">
                                    <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-cityVillage" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                                </p>
                            </div>
                            <div>
                                <h3><uimessage code="mirebalais.address.neighborhoodCell"/></h3>
                                <p class="left">
                                    <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-address3" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                                </p>
                            </div>
                            <div>
                                <h3><uimessage code="mirebalais.address.address1"/></h3>
                                <p class="left">
                                    <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-address1" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                                </p>
                            </div>
                                <div>
                                <h3><uimessage code="mirebalais.address.address2"/></h3>
                                <p class="left">
                                    <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-address2" showUnits="false" unitsCssClass="append-to-value" size="20"/>
                                </p>
                            </div>
                        </div>
                    </ifMode>

                    <!-- view mode of address -->
                    <ifMode mode="VIEW" include="true">
                        <div>
                            <h3><uimessage code="zl.registration.patient.contactPerson.contactAddress.label"/></h3>
                            <p class="left">
                                <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-address2" showUnits="false" unitsCssClass="append-to-value" size="20"/><br/>
                                <obs class="level" conceptId="PIH:ADDRESS OF PATIENT CONTACT" id="contactAddress-address1" showUnits="false" unitsCssClass="append-to-value" size="20"/><br/>
