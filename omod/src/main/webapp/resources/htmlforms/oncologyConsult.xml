        margin-bottom: 6px;
        border-bottom: 1px solid #ccc;
        }

        #who-when-where p {
        display: inline-block;
        padding-right: 20px;
        }

        #where > input[type=text] {
        display: inline-block;
        }

        .narrow {
        width: 200px;
        }

        .field-error {
        color: #ff6666;
        font-size: 1.1em;
        display: block;
        }

        .column {
        float: left;
        width: 50%
        }

        .column_narrow {
        float: left;
        width: 20%
        }

        .column_wide {
        float: left;
        width: 80%
        }

        .simple-form-ui input {
        min-width: 80%
        }

        form fieldset {
        min-width: 90%
        }

        #encounterDate input {
        min-width: 15%
        }

        textarea {
        overflow-y: hidden; /* fixes scrollbar flash - kudos to @brettjonesdev */
        padding-top: 1.1em; /* fixes text jump on Enter keypress */
        }

        @media print {
        .print-form-datestamps { display: block !important }
        button.cancel, button.submit { display: none }
